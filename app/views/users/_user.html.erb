<% if user.status %>
  <div class="row text-success" id="user_<%= user.id %>">
    <p class="col-lg-7 col-md-8 col-sm-4">
      <%= "#{user.nickname}" %>  
    </p>
    <i class="col-1 py-1 icon-ok"></i>
  </div>
<% else %>
  <div class="row text-danger" id="user_<%= user.id %>">
    <p class="col-lg-7 col-md-8 col-sm-4">
      <%= "#{user.nickname}" %>  
    </p>
    <i class="col-1 py-1 icon-remove-sign"></i>
  </div>
<% end %>
